<%- include("partials/header") %>

<div class="container">
	<div class="row showbox">
		<center><h2 class="ours2" style="text-transform:uppercase">Add new item</h2></center>
		<div style="width:80%; margin: 25px auto">
			<form action="/stocks" method="POST">
				<div class = "form-group">
					<input autocomplete="off" class= "form-control" type = "text" name = "name" placeholder="Stock Name" required>
				</div>
				<div class = "form-group">
					<input autocomplete="off" class= "form-control" type = "number" name = "qty" placeholder="Quantity" required>
				</div>
				<div class = "form-group">
					<input autocomplete="off" class= "form-control" type = "number" name = "critical" placeholder="Critical Level" required>
				</div>
				<div class = "form-group">
					<input autocomplete="off" class= "form-control" type = "text" name = "description" placeholder="Notes. E.G., Date created, Ordered by" required>
				</div>
				<div class = "form-group">
					<button class="btn btn-lg btn-default btn-block btn-primary">Submit!</button>
				</div>
			</form>
			<br>
			<center><a href ="/stocks">Back to Control Panel</a></center>
		</div>
	</div>
</div>

<%- include ("partials/footer") %>