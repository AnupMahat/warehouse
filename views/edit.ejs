<%- include("partials/header") %>

<div class="container">
	<div class="row showbox">
		<center><h3 class="ours3" style="color:#6d6d6d">Edit item:</h3><h2 class="ours2" style="text-transform:uppercase"><%= stock.name%></h2></center>
		<div style="width:80%; margin: 25px auto">
			<form action="/stocks/<%=stock._id %>?_method=PUT" method="POST">
				<div class = "form-group">
					<label class="showlbl">Stock Name:</label>
					<input class= "form-control" type = "text" name = "stock[name]" placeholder="Stock Name" value="<%=stock.name%>" required>
				</div>
				<div class = "form-group">
					<label class="showlbl">Stock Quantity:</label>
					<input class= "form-control" type = "number" name = "stock[qty]" placeholder="Quantity" value=<%=stock.qty%> required>
				</div>
				<div class = "form-group">
					<label class="showlbl">Critical lvl:</label>
					<input class= "form-control" type = "number" name = "stock[critical]" placeholder="Critical Level" value=<%=stock.critical%> required>
				</div>
				<div class = "form-group">
					<label class="showlbl">Ordered Qty:</label>
					<input class= "form-control" type = "number" name = "stock[ordered]" placeholder="ordered qty" value=<%=stock.ordered%>>
				</div>
				<div class = "form-group">
					<label class="showlbl">Description:</label>
					<input class= "form-control" type = "text" name = "stock[description]" placeholder="description" value="<%=stock.description%>" required>
				</div>
					<div class = "form-group">
						<button class="btn btn-lg btn-info btn-block ourbtn">Update</button>
					</div>
			</form>
			<br>
			<center><a href ="/stocks">Back to Control Panel</a></center>
		</div>
	</div>
</div>

<%- include ("partials/footer") %>